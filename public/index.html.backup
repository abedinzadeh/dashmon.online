            document.getElementById('themeToggle').addEventListener('click', toggleTheme);
            
            // TV mode toggle
            document.getElementById('tvModeToggle').addEventListener('click', toggleTvMode);

            // Refresh button
            document.getElementById('refreshBtn').addEventListener('click', refreshAll);

            // Logout button
            document.getElementById('logoutBtn').addEventListener('click', logout);

            // Store modal (admin only)
            const addStoreBtn = document.getElementById('addStoreBtn');
            const storeForm = document.getElementById('storeForm');

            // Apply once on setup
            applyAdminGatingIndexUI();

            if (isAdminLoggedIn()) {
                addStoreBtn?.addEventListener('click', () => openModal('storeModal'));
                storeForm?.addEventListener('submit', addStore);
            } else {
                // Hide button and block any forced submits
                if (addStoreBtn) addStoreBtn.style.display = 'none';
                storeForm?.addEventListener('submit', (e) => {
                    e.preventDefault();
                    alert('Please login to add stores.');
                });
            }

            document.getElementById('closeStoreModal').addEventListener('click', () => closeModal('storeModal'));
            document.getElementById('cancelStore').addEventListener('click', () => closeModal('storeModal'));

            // Device modal
            document.getElementById('closeDeviceModal').addEventListener('click', () => closeModal('deviceModal'));
            document.getElementById('cancelDevice').addEventListener('click', () => closeModal('deviceModal'));
            document.getElementById('deviceForm').addEventListener('submit', addDevice);

            // Device details modal
            document.getElementById('closeDeviceDetails').addEventListener('click', () => closeModal('deviceDetailsModal'));
            document.getElementById('openDeviceUrl').addEventListener('click', openDeviceUrl);
            document.getElementById('testDeviceNow').addEventListener('click', testCurrentDevice);

            // Edit device modal
            document.getElementById('closeEditDeviceModal').addEventListener('click', () => closeModal('editDeviceModal'));
            document.getElementById('cancelEditDevice').addEventListener('click', () => closeModal('editDeviceModal'));
            document.getElementById('editDeviceForm').addEventListener('submit', saveEditedDevice);
            document.getElementById('deleteDeviceBtn').addEventListener('click', function() {
                const deviceId = document.getElementById('editDeviceId').value;
                const storeId = document.getElementById('editStoreId').value;
                deleteDevice(storeId, deviceId);
            });
            
            // Sound toggle
            document.getElementById('soundToggle').addEventListener('click', toggleDownAlertSound);

            // Unlock audio on first user interaction
            document.addEventListener('click', unlockDownAlertAudio, { once: true });

            // URL auto-fill
            document.getElementById('deviceIp').addEventListener('input', updateDeviceUrl);
            document.getElementById('devicePort').addEventListener('input', updateDeviceUrl);
            document.getElementById('deviceType').addEventListener('change', updateDefaultUrl);

            // Edit device URL auto-fill
            document.getElementById('editDeviceIp').addEventListener('input', updateEditDeviceUrl);
            document.getElementById('editDevicePort').addEventListener('input', updateEditDeviceUrl);
            document.getElementById('editDeviceType').addEventListener('change', updateEditDefaultUrl);

            // Close modal on overlay click
            document.querySelectorAll('.modal-overlay').forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        this.style.display = 'none';
                    }
                });
            });

            // Store header click - OPEN IN NEW TAB
            document.addEventListener('click', function(e) {
                // Store header click - open store details in new tab
                const storeHeader = e.target.closest('.store-header');
                if (storeHeader) {
                    // Check if we're clicking on the expand/collapse icon (chevron)
                    if (e.target.closest('.fa-chevron-down') || e.target.closest('.fa-chevron-up')) {
                        // This is the toggle functionality - keep it
                        e.stopPropagation();
                        const storeCard = storeHeader.closest('.store-card');
                        if (storeCard) {
                            const storeId = storeCard.dataset.storeId;
                            toggleSingleStore(storeId, storeCard);
                        }
                        return;
                    }

                    e.preventDefault();
                    e.stopPropagation();

                    const storeCard = storeHeader.closest('.store-card');
                    if (storeCard) {
                        const storeId = storeCard.dataset.storeId;
                        // Open store details in a NEW TAB
                        window.open(`/store-details.html?storeId=${storeId}`, '_blank');
                        return;
                    }
                }

                // Device item click
                const deviceItem = e.target.closest('.device-item');
                if (deviceItem) {
                    e.stopPropagation();
                    const storeId = deviceItem.dataset.storeId;
                    const deviceId = deviceItem.dataset.deviceId;
                    showDeviceDetails(storeId, deviceId);
                }
            });
        }

        // Toggle single store
        function toggleSingleStore(storeId, storeCard) {
            const devicesSection = storeCard.querySelector('.devices-section');
            const expandIcon = storeCard.querySelector('.fa-chevron-down, .fa-chevron-up');

            if (devicesSection && expandIcon) {
                if (devicesSection.style.display === 'none' || !devicesSection.style.display) {
                    // Expand this store
                    devicesSection.style.display = 'block';
                    expandIcon.classList.remove('fa-chevron-down');
                    expandIcon.classList.add('fa-chevron-up');
                    expandedStores.add(storeId);
                } else {
                    // Collapse this store
                    devicesSection.style.display = 'none';
                    expandIcon.classList.remove('fa-chevron-up');
                    expandIcon.classList.add('fa-chevron-down');
                    expandedStores.delete(storeId);
                }
            }
        }

        // Theme toggle
        function toggleTheme() {
            const body = document.body;
            const themeBtn = document.getElementById('themeToggle');

            if (currentTheme === 'dark') {
                body.classList.remove('dark-theme');
                themeBtn.innerHTML = '<i class="fas fa-moon"></i>';
                currentTheme = 'light';
            } else {
                body.classList.add('dark-theme');
                themeBtn.innerHTML = '<i class="fas fa-sun"></i>';
                currentTheme = 'dark';
            }
            
            // Reinitialize chart to update colors for new theme
            if (statusChart) {
                statusChart.destroy();
                initializeChart();
                updateSummary();
            }
            
            // Also update TV chart if in TV mode
            if (tvMode && tvStatusChart) {
                tvStatusChart.destroy();
                initializeTvChart();
                updateTvSummary();
            }
        }

