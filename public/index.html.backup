        // Alert sound state
        let sirenPlaying = false;
        let sirenStopTimer = null;
        let lastDownDeviceCountForAlert = null;
        let downAlertInitialized = false;

        // Down-devices sound alert state
        let downAlertSoundEnabled = (localStorage.getItem('downAlertSound') || 'on') === 'on';
        let downAlertAudioCtx = null;

        function computeDownDeviceCount(storesList) {
            let count = 0;
            (storesList || []).forEach(store => {
                if (store && Array.isArray(store.devices) && store.devices.length) {
                    count += store.devices.filter(d => d && d.status === 'down').length;
                } else if (store) {
                    // Fallback if devices are not present
                    count += (store.downDevices || 0);
                }
            });
            return count;
        }

        function maybePlayDownAlert(currentDownCount) {
            // First successful load: establish baseline without playing sound
            if (!downAlertInitialized || lastDownDeviceCountForAlert === null) {
                lastDownDeviceCountForAlert = currentDownCount;
                downAlertInitialized = true;
                return;
            }

            // Play only when the DOWN device count increases
            if (currentDownCount > lastDownDeviceCountForAlert) {
                const now = Date.now();
                if (now - lastBuzzAtMs > 2500) {
                    const globalLast = parseInt(localStorage.getItem('downAlertLastPlayAt') || '0', 10);
                    if (now - globalLast > 3000) {
                        localStorage.setItem('downAlertLastPlayAt', String(now));
                        playDownAlertBuzz();
                    }
                    lastBuzzAtMs = now;
                }
            }

            lastDownDeviceCountForAlert = currentDownCount;
        }

        function updateSoundToggleUI() {
            const btn = document.getElementById('soundToggle');
            if (!btn) return;
            const icon = btn.querySelector('i');
            if (!icon) return;

            if (downAlertSoundEnabled) {
                icon.className = 'fas fa-volume-up';
                btn.title = 'Mute alert sound';
            } else {
                icon.className = 'fas fa-volume-xmark';
                btn.title = 'Unmute alert sound';
            }
        }

        function toggleDownAlertSound() {
            downAlertSoundEnabled = !downAlertSoundEnabled;
            localStorage.setItem('downAlertSound', downAlertSoundEnabled ? 'on' : 'off');
            updateSoundToggleUI();

            // try to unlock audio context if user just enabled it
            if (downAlertSoundEnabled) unlockDownAlertAudio();
        }

        function unlockDownAlertAudio() {
            // Keep the AudioContext unlock
            try {
                if (!downAlertAudioCtx) {
                    downAlertAudioCtx = new (window.AudioContext || window.webkitAudioContext)();
                }
                if (downAlertAudioCtx.state === 'suspended') {
                    downAlertAudioCtx.resume();
                }
            } catch (e) {
                console.warn('Audio unlock failed:', e);
            }

            // ALSO "prime" the MP3 once (important for autoplay policies)
            try {
                if (downAlertAudio) {
                    const p = downAlertAudio.play();
                    if (p && typeof p.then === 'function') {
                        p.then(() => {
                            downAlertAudio.pause();
                            downAlertAudio.currentTime = 0;
                        }).catch(() => {});
                    }
                }
            } catch (e) {
                // ignore
            }
        }

        function formatDeviceType(type) {
            const t = (type || '').toLowerCase();
            const map = {
                bmc: 'BMC',
                fortiap: 'FortiAP'
            };
            return map[t] || (t ? t.charAt(0).toUpperCase() + t.slice(1) : '');
        }

        let lastBuzzAtMs = 0;

        function playDownAlertBuzz() {
            if (!downAlertSoundEnabled) return;

            // Don't stack multiple plays
            if (sirenPlaying) return;
            sirenPlaying = true;
            if (sirenStopTimer) { clearTimeout(sirenStopTimer); sirenStopTimer = null; }
            
            // Prefer MP3 siren
            try {
                downAlertAudio.currentTime = 0;
                const p = downAlertAudio.play();
                if (p && typeof p.catch === 'function') p.catch(() => {});
                
                // Force-stop after ~1.3s so you only hear ONE siren burst
                sirenStopTimer = setTimeout(() => {
                    try { downAlertAudio.pause(); downAlertAudio.currentTime = 0; } catch (e) {}
                    sirenPlaying = false;
                    sirenStopTimer = null;
                }, 1300);
            } catch (e) {
                console.warn('MP3 alert failed, falling back to oscillator:', e);
                sirenPlaying = false;
            }

            // Fallback: oscillator buzz
            try {
                unlockDownAlertAudio();
                if (!downAlertAudioCtx) return;

                const ctx = downAlertAudioCtx;
                const t0 = ctx.currentTime;

                const pulse = (t) => {
                    const osc = ctx.createOscillator();
                    const gain = ctx.createGain();

                    osc.type = 'square';
                    osc.frequency.setValueAtTime(170, t);

                    gain.gain.setValueAtTime(0.0001, t);
                    gain.gain.exponentialRampToValueAtTime(0.25, t + 0.01);
                    gain.gain.exponentialRampToValueAtTime(0.0001, t + 0.18);

                    osc.connect(gain);
                    gain.connect(ctx.destination);

                    osc.start(t);
                    osc.stop(t + 0.20);
                };

                pulse(t0);
                pulse(t0 + 0.22);
                pulse(t0 + 0.44);
            } catch (e) {
                console.warn('Buzz failed:', e);
            }
        }

        const downAlertAudio = new Audio('./siren.mp3');
        downAlertAudio.preload = 'auto';
        downAlertAudio.volume = 0.8;

