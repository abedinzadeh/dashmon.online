# Copy to .env and fill values. DO NOT commit .env.

NODE_ENV=production
SESSION_SECRET=change-me

# Postgres
POSTGRES_DB=dashmon
POSTGRES_USER=dashmon
POSTGRES_PASSWORD=change-me

# Redis
REDIS_URL=redis://redis:6379

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Twilio SMS (optional)
TWILIO_ACCOUNT_SID=
TWILIO_API_KEY_SID=
TWILIO_API_KEY_SECRET=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
SMS_TEST_MODE=true

# Public URL (used for PayPal return/cancel URLs)
PUBLIC_BASE_URL=https://dashmon.online

# Billing
BILLING_CURRENCY=AUD
BILLING_PREMIUM_PRICE=19.00

# Demo (one-time 1 day upgrade for free users)
BILLING_DEMO_ENABLED=false
# Set to an ISO timestamp to auto-disable demo after a window
BILLING_DEMO_PROMO_END_AT=2026-02-09T00:00:00Z
BILLING_DEMO_DURATION_HOURS=24

# Bank transfer (manual / pending)
BANK_TRANSFER_ACCOUNT_NAME=
BANK_TRANSFER_BSB=
BANK_TRANSFER_ACCOUNT_NUMBER=
BANK_TRANSFER_NOTE=Include the Reference code in your transfer description.

# Admin API key (optional; enables bank-transfer "mark paid" endpoint)
ADMIN_API_KEY=change-me

# PayPal Subscriptions
# Create a PayPal subscription plan in your PayPal dashboard and paste the plan id below.
PAYPAL_ENV=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_PLAN_ID=
# Webhook ID from PayPal dashboard (used for signature verification)
PAYPAL_WEBHOOK_ID=